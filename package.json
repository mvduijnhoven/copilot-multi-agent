{
  "name": "copilot-multi-agent",
  "displayName": "Copilot Multi-Agent",
  "description": "Visual Studio Code extension that adds multi-agent capabilities to GitHub Copilot Chat.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onLanguage:*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "copilot-multi-agent.coordinator",
        "name": "multi-agent",
        "description": "Multi-agent coordinator for specialized AI assistance",
        "isSticky": true
      }
    ],
    "configuration": {
      "title": "Copilot Multi-Agent",
      "properties": {
        "copilotMultiAgent.coordinator": {
          "type": "object",
          "description": "Configuration for the coordinator agent",
          "properties": {
            "systemPrompt": {
              "type": "string",
              "description": "System prompt for the coordinator agent",
              "default": "You are a coordinator agent that helps orchestrate work between specialized agents. You can delegate tasks to other agents when appropriate."
            },
            "description": {
              "type": "string",
              "description": "Description of the coordinator agent",
              "default": "Coordinates work between specialized agents"
            },
            "useFor": {
              "type": "string",
              "description": "What the coordinator agent should be used for",
              "default": "Task orchestration and delegation"
            },
            "delegationPermissions": {
              "type": "object",
              "description": "Delegation permissions for the coordinator",
              "default": {
                "type": "all"
              }
            },
            "toolPermissions": {
              "type": "object",
              "description": "Tool permissions for the coordinator",
              "default": {
                "type": "all"
              }
            }
          }
        },
        "copilotMultiAgent.customAgents": {
          "type": "array",
          "description": "Configuration for custom agents",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Unique name for the agent"
              },
              "systemPrompt": {
                "type": "string",
                "description": "System prompt for the agent"
              },
              "description": {
                "type": "string",
                "description": "Description of the agent"
              },
              "useFor": {
                "type": "string",
                "description": "What the agent should be used for"
              },
              "delegationPermissions": {
                "type": "object",
                "description": "Delegation permissions for the agent"
              },
              "toolPermissions": {
                "type": "object",
                "description": "Tool permissions for the agent"
              }
            },
            "required": ["name", "systemPrompt", "description", "useFor"]
          },
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
